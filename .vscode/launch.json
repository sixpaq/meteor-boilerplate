  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via NPM",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
          "run-script", "start"
      ],
      "port": 3000,
      "env": {
          "MONGO_URL": "mongodb://127.0.0.1:27017/demo"
      },
    }
